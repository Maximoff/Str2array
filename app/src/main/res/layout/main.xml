<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="5dp">

	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:entries="@array/charsets"
		android:id="@+id/mainSpinner1"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.0"
		android:layout_marginBottom="10dp">

		<EditText
			android:layout_width="match_parent"
			android:inputType="textMultiLine"
			android:layout_height="match_parent"
			android:ems="10"
			android:hint="@string/string"
			android:id="@+id/mainEditText1"
			android:gravity="top"/>

		<ImageView
			android:src="@drawable/copy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:layout_alignParentRight="true"
			android:id="@+id/mainImageView1"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.0"
		android:layout_marginBottom="10dp">

		<EditText
			android:layout_width="match_parent"
			android:inputType="textMultiLine"
			android:layout_height="match_parent"
			android:ems="10"
			android:hint="@string/array"
			android:id="@+id/mainEditText2"
			android:gravity="top"/>

		<ImageView
			android:src="@drawable/copy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_marginTop="5dp"
			android:layout_alignParentRight="true"
			android:id="@+id/mainImageView2"/>

	</RelativeLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/convert"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_weight="1.0"
			android:id="@+id/mainButton1"/>

		<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/reverse"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_weight="1.0"
			android:id="@+id/mainButton2"/>

	</LinearLayout>

</LinearLayout>

